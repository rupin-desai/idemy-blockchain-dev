{
  "name": "blockchain-ssi-backend",
  "version": "1.0.0",
  "description": "Blockchain-based Self-Sovereign Identity Backend",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "ganache": "ganache --db ./.ganache --deterministic --mnemonic \"test test test test test test test test test test test junk\"",
    "ganache:persistent": "ganache --db ./.ganache --mnemonic \"test test test test test test test test test test test junk\"",
    "compile": "cd src/blockchain && truffle compile",
    "migrate": "cd src/blockchain && truffle migrate",
    "migrate:dev": "cd src/blockchain && truffle migrate --network development",
    "migrate:reset": "cd src/blockchain && truffle migrate --reset"
  },
  "keywords": [
    "blockchain",
    "identity",
    "ssi",
    "nft",
    "ipfs",
    "firebase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@pinata/sdk": "^1.1.23",
    "@truffle/hdwallet-provider": "^1.7.0",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dids": "^4.0.4",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "firebase-admin": "^13.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "key-did-provider-ed25519": "^3.0.2",
    "key-did-resolver": "^3.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uint8arrays": "^4.0.6",
    "uuid": "^9.0.1",
    "web3": "^4.16.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
